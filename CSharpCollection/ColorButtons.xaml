        <Button x:Name="btn2" Content="Reset" HorizontalAlignment="Left" Margin="10,288,0,0" VerticalAlignment="Top" Height="23" Width="75" Background="Black" Foreground="White" Click="btn2_Click"/>
        <Button x:Name="btn3" Content="Red" HorizontalAlignment="Left" Margin="118,260,0,0" VerticalAlignment="Top" Width="150" Height="23" Background="Black" Foreground="White" Click="btn3_Click"/>
