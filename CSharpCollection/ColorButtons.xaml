        <Button x:Name="btn5" Content="Yellow" HorizontalAlignment="Left" Margin="428,260,0,0" VerticalAlignment="Top" Width="150" Height="23" Background="Black" Foreground="White" Click="btn5_Click"/>
        <Button x:Name="btn7" Content="Green" HorizontalAlignment="Left" Margin="118,288,0,0" VerticalAlignment="Top" Width="150" Height="23" Background="Black" Foreground="White" Click="btn7_Click"/>
        <Button x:Name="btn6" Content="Blue" HorizontalAlignment="Left" Margin="273,288,0,0" VerticalAlignment="Top" Width="150" Height="23" Background="Black" Foreground="White" Click="btn6_Click"/>
        <Button x:Name="btn8" Content="Purple" HorizontalAlignment="Left" Margin="428,288,0,0" VerticalAlignment="Top" Width="150" Height="23" Background="Black" Foreground="White" Click="btn8_Click"/>
        <Label x:Name="label1" Content="You've clicked: time(s)" HorizontalAlignment="Center" Margin="0,229,0,0" VerticalAlignment="Top" Foreground="White"/>

    </Grid>
</Page>
